#!/bin/bash

export PATH="$(pwd)${PATH:+:${PATH}}" 

if ! [[ -z "${BW_SESSION}" ]]; then
  install-bitwarden
  configure-secrets
fi

setup-swap
install-git
install-docker
install-dotnet-sdk
install-node
install-vnc
setup-bitwarden-server
setup-bitwarden-clients
setup-bitwarden-web
setup-bitwarden-directory-connector
