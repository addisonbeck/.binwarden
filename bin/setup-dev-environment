#!/bin/bash

export PATH="$(pwd)${PATH:+:${PATH}}" 

if ! [[ -z "${BW_SESSION}" ]]; then
  source install-bitwarden
  source configure-secrets
fi

source setup-swap
source install-git
source install-docker
source install-dotnet-sdk
source install-node
source install-vnc
source setup-bitwarden-server
source setup-bitwarden-clients
source setup-bitwarden-web
source setup-bitwarden-directory-connector

