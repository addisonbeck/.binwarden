#!/usr/bin/bash

source platform

login_to_bitwarden () {
  export BW_SESSION="$(bw login --raw)"
}

export_secrets () {
  export BW_CONFIG=$(bw list items --search "bitwarden-environment-setup" --collectionid 'null' --session $BW_SESSION)
  export ITEM_ID=$(parse_config_item "id" "$BW_CONFIG")
}

login_to_bitwarden
export_secrets

